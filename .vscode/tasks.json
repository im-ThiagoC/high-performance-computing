{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "make_debug",
            "type": "shell",
            "options": {
                "cwd": "${workspaceFolder}" 
            },
            "command": "make",
            "args": [
                "-C", "Deadlock",
                "all"
            ],
            
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "reveal": "always"
            },
            "problemMatcher": "$gcc"
        }
    ]
}